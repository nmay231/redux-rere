{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist/",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "module": "commonjs",
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "lib": ["es2017"]
    },
    "include": ["src/*"],
    "exclude": ["node_modules/**/*"],
    "files": ["src/index.d.ts"]
}
